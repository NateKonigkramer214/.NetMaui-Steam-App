<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.LoginPage"
             xmlns:vm="clr-namespace:SteamInfomation.MVVM.ViewModels"
             
             Title="Login"
             BackgroundColor="White">


    <StackLayout>
        <Image Source="steam2p.png" />
        <Label Text="Login" HorizontalOptions="CenterAndExpand" FontSize="Large" Margin="0,20,0,20"/>
        <Entry Placeholder="Username" x:Name="LoginUsernameEntry"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="LoginPasswordEntry"/>
        <Button Text="Login" Clicked="OnLoginClicked"/>
        <Button Text="want to register?" x:Name="GTRegbtn" Clicked="GTRegbtn_Clicked"/>
    </StackLayout>

</ContentPage>