<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.LoginPage"
             xmlns:vm="clr-namespace:SteamInfomation.MVVM.ViewModels"
             Title="Login"
             BackgroundColor="#164863">


    <StackLayout>
        <Label Text="Welcome for Steam Tracker" HorizontalOptions="CenterAndExpand" FontSize="Large" Margin="0,20,0,20"/>
        <Entry Placeholder="Username" x:Name="LoginUsernameEntry"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="LoginPasswordEntry"/>
        <Button Text="Login" Clicked="OnLoginClicked"/>
        <!--GTRegbtn means Go To Register Button-->
        <Button  x:Name="GTRegbtn" Clicked="GTRegbtn_Clicked"
                Text="New here? Create an account"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                TextColor="White"
                FontAttributes="Italic"
                FontSize="14"/>
    </StackLayout>

</ContentPage>