<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.LoginPage"
             Title="Login">


    <StackLayout Margin="20">
        <Image Source="steam2p.png" />
        <!-- Title -->
        <Label Text="Steam App" HorizontalOptions="Center" Grid.Row="0" FontSize="30"  Padding="20"/>
        <!-- Login Entry-->
        <Entry Placeholder="Username" Text="{Binding Username}" />
        <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />
        <Button x:Name="LoginBtn" Text="Login" Command="{Binding LoginCommand}" />

        <Button x:Name="CreateACBtn"
                Text="New here? Create an account"
                BackgroundColor="Transparent"
                BorderColor="Transparent"
                TextColor="Black"
                FontAttributes="Italic"
                FontSize="14"
                Command="{Binding RegisterCommand}" />
    </StackLayout>

</ContentPage>