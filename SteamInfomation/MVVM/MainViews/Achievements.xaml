<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.Achievements"
             Title="Achievements">

    <StackLayout Margin="20">
        <Label Text="Achievements" FontSize="24" HorizontalOptions="CenterAndExpand" />
        <ListView ItemsSource="{Binding Achievements}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="{Binding Name}" FontSize="18" />
                            <Label Text="{Binding Description}" FontSize="14" />
                            <Label Text="Status: " />
                            <Label Text="{Binding IsUnlocked, StringFormat='Unlocked: {0}'}" FontSize="14" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Load Achievements" Command="{Binding LoadAchievementsCommand}" />
    </StackLayout>

</ContentPage>