<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.SearchGames"
             Title="SearchGames">
    <StackLayout>
        <!-- Search Input -->
        <Entry Placeholder="Enter game name" x:Name="txtGameName" />
        <Button Text="Search" />

        <!-- Display Game Information -->
        <Frame x:Name="gameInfoFrame" IsVisible="False">
            <StackLayout>
                <Label x:Name="lblGameTitle" />
                <Label x:Name="lblGameDescription" />
                <!-- Add more labels for additional information -->
            </StackLayout>
        </Frame>
    </StackLayout>

</ContentPage>