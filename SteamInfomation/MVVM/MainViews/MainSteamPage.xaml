<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.MainSteamPage"
             Title="MainSteamPage">
    <VerticalStackLayout>
        <Label Text="Steam App" HorizontalOptions="Center" Grid.Row="0" FontSize="30"  Padding="20"/>
        
        <Grid RowSpacing="10" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Button x:Name="img1" Grid.Column="0" Grid.Row="0" ImageSource="console" Clicked="img1_Clicked" HeightRequest="100" WidthRequest="100" BackgroundColor="White"/>
            <Button x:Name="img2"  Grid.Column="1" Grid.Row="0" ImageSource="controller" Clicked="img2_Clicked" HeightRequest="100" WidthRequest="100" BackgroundColor="White"/>
        </Grid>
        

    </VerticalStackLayout>
</ContentPage>