<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SteamInfomation.MVVM.MainViews.RegisterPage"
             Title="RegisterPage"
             BackgroundColor="#164863">

    <VerticalStackLayout Margin="20">
        <Label Text="Create an Account" FontSize="24" VerticalOptions="CenterAndExpand" HorizontalOptions="Center" />

        <Entry Placeholder="Username" Text="{Binding NewUsername}" />
        <Entry Placeholder="Password" Text="{Binding NewPassword}" IsPassword="True" />
        <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" />

        <Button Text="Create Account" Command="{Binding RegisterCommand}" Clicked="Button_Clicked" />
    </VerticalStackLayout>
</ContentPage>